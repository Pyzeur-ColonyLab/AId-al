# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Model Configuration - Change these to use any HuggingFace model!
MODEL_NAME=Pyzeur/Code-du-Travail-mistral-finetune
MODEL_TYPE=universal
MODEL_PATH=

# Model Performance Settings
MAX_LENGTH=512
BATCH_SIZE=1
USE_QUANTIZATION=false
DEVICE=auto

# Generation Parameters
TEMPERATURE=0.7
TOP_P=0.9
TOP_K=50
REPETITION_PENALTY=1.1
DO_SAMPLE=true

# HuggingFace Configuration
HF_TOKEN=your_huggingface_token_here
TRANSFORMERS_CACHE=/tmp/transformers_cache
HF_HOME=/tmp/huggingface

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=aibot_db
DB_USER=botuser
DB_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://botuser:your_secure_password_here@postgres:5432/aibot_db

# Redis Configuration (optional)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# AWS Configuration (optional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-east-1

# Application Configuration
DEBUG=false
LOG_LEVEL=INFO
MAX_WORKERS=2

# Bot Behavior
DEFAULT_CONFIDENCE_THRESHOLD=0.5
MAX_RESPONSE_LENGTH=1000
ENABLE_LOGGING=true
RATE_LIMIT_PER_MINUTE=10

# Security - Add your Telegram user IDs here
ALLOWED_USERS=
ADMIN_USERS=

# Feature Flags
ENABLE_URL_RESOURCES=true
ENABLE_SMART_CONTRACTS=true
ENABLE_MODEL_INFO_COMMAND=true
ENABLE_METRICS=false

# Monitoring
METRICS_PORT=9090
HEALTH_CHECK_PORT=8001
WEBHOOK_URL=
WEBHOOK_PORT=8000
